{
  "name": "eth-sanfrancisco",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**/*"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "run-p lint:*",
    "lint:contracts": "yarn workspace @capsule-wallet/contracts lint",
    "test": "run-p test:*",
    "test:contracts": "yarn workspace @capsule-wallet/contracts test",
    "build": "run-p build:*",
    "build:contracts": "yarn workspace @capsule-wallet/contracts build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "wait-on": "^6.0.1"
  },
  "lint-staged": {
    "*.{md,json}": "prettier --write",
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix"
  }
}
